        android:textColor="#0000FF"
        android:text="Name"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="0dp"
        android:id="@+id/txtNo"
        android:layout_weight="3"
        android:textColor="#000000"
        android:text="+91 9742723070"
        android:layout_height="wrap_content" />
</LinearLayout>